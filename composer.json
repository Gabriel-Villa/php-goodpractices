{
    "name": "pvilla/php-goodpractices",
    "description": "My new project",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Pvilla\\PhpGoodpractices\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pvilla\\PhpGoodpractices\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Gabriel-Villa",
            "email": "VillaCapurroGabriel@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^11.2",
        "friendsofphp/php-cs-fixer": "^3.60",
        "squizlabs/php_codesniffer": "*"
    },
    "scripts": {
        "cs-fix": "./vendor/bin/php-cs-fixer fix --config=dev/tools/.php-cs-fixer.php",
        "csniffer": "./vendor/bin/phpcs --standard=dev/tools/ruleset.xml src "
    }
}
